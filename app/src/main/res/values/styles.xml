<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormEmailPassword">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">89dp</item>
        <item name="android:layout_marginBottom">53dp</item>

    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>

        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLength">25</item>
    </style>
    <style name="formSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/form_text</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLength">25</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="addressStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/form_text</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLength">50</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button">

        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="btnConcluir">
        <item name="android:background">@drawable/form_text</item>
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    <style name="btnCancelar">
        <item name="android:background">@drawable/form_text</item>
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="btnDetalhes">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/white</item>

        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="listViewStyle">
        <item name="android:backgroundTint">@color/blue_primary</item>
        <item name="android:background">@drawable/form_text</item>
    </style>

</resources>